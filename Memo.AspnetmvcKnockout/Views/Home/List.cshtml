@model Memo.AspnetmvcKnockout.Models.MemoListViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var jsonData = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.MemoList));
}

<div class="col-xs-12">
    <h2>List All Memo</h2>
    <p>list all memo created at create memo page.</p>

    @*<div class="medium secondary btn">
        <input type="button" value="Clear Records" id="clear" class="btn btn-primary" />
    </div>*@

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Memo</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: memos">
            <tr>
                <td data-bind="text: id"></td>
                <td>
                    <textarea data-bind="value: memo, event: { change: $parent.textUpdated}"></textarea>
                </td>
                <td data-bind="text: date" >
                </td>
                <td>
                    <input type="button" class="btn btn-warning btn-xs" value="Delete" data-bind="click: $parent.deleteMemo">
                </td>
            </tr>
        </tbody>
    </table>
</div>
   
@section scripts{

    <script>
        var _listData = @jsonData || {};
    </script>
    <script src="~/Scripts/apps/listMemo.js"></script>
}
